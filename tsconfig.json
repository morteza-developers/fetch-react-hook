{
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "lib": ["ES6", "ES2017", "DOM"],
    "outDir": "dist",
    "baseUrl": "./src",
    "sourceMap": false,
    "strict": true,
    "target": "ES6",
    "allowJs": true,
    "noEmit": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": ["src/types", "node_modules/@types"],
    "jsx": "react-jsx",
    "checkJs": false,
    "removeComments": true,
    "incremental": false,
    "esModuleInterop": true
  },
  "include": [
    "public/sw.js",
    "src",
    "public/sw.js",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/**/*.ts",
    "**/**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/**/*.js",
    "**/**/*.jsx"
  ],
  "exclude": ["node_modules"]
}
